<div class="cocktails">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="cocktail">
          <%= simple_form_for(@cocktail) do |f| %>
            <%= f.error_notification %>

            <%= f.input :name %>

            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>

            <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
